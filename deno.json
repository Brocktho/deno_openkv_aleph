{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "importMap": "./import-map.json",
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --allow-run --allow-write main.ts",
    "dev": "deno run -A --unstable dev.ts",
    "test": "deno test --import-map import_map_test.json",
    "check": "deno check ./main.ts",
    "lint": "deno lint",
    "format": "deno fmt",
    "prepare": "deno run --allow-read --allow-write --allow-env cli.ts prepare"
  },
  "fmt": {
    "files": {
      "include": ["app/"]
    }
  },
  "lint": {
    "files": {
      "include": ["app/"]
    }
  }
}
